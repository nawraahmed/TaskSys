@model IEnumerable<TaskManagementSystem.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Projects </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

<form method="get" asp-controller="Projects" asp-action="Index" class="form-inline">
<div class="input-group">
        <input type="text" name="search" placeholder="Search projects..." class="form-control" value="@Context.Request.Query["search"].ToString()" />
    <div class="input-group-append">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</div>
</form>
<br />



@functions {
    string GetStatusColor(string status)
    {
        switch (status)
        {
            case "Completed":
                return "green";
            case "In Progress":
                return "orange";
            case "Pending":
                return "gray";
            case "Overdue":
                return "red";
            default:
                return "black";
        }
    }
}



<table class="table">
    <thead>
        <tr>
            <th>
               Project Name
            </th>
            
            <th>
                Project Deadline
            </th>
            <th>
                Project Status
            </th>
            <th>
                Project Manager
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td style="color: @GetStatusColor(item.Status)">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByUsernameNavigation.Username)
                </td>
                <td>
                    <a asp-controller="Tasks" asp-action="Index" asp-route-projectId="@item.ProjectId">View Tasks</a> |
                    <a asp-controller="#" asp-action="Index" asp-route-id="@item.ProjectId">Dashbaord</a> |
                    <a asp-action="Details" asp-route-id="@item.ProjectId">Project Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit Project</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete Project</a>
                </td>
            </tr>
        }
    </tbody>
</table>

