@using TaskManagementSystem.ViewModels
@model ProjectsUsersVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Project Details</h1>

<div>
    <h4>Project Name:  @Html.DisplayFor(model => model.Project.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Description)
        </dd>
        <dt class = "col-sm-2">
            Project Deadline
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Deadline)
        </dd>
        <dt class = "col-sm-2">
            Project Budget
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Budget)
        </dd>
        <dt class = "col-sm-2">
            Project Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Status)
        </dd>
        <dt class = "col-sm-2">
            Project Manager
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.CreatedByUsernameNavigation.Username)
        </dd>
        <dt class="col-sm-2">
            Project Members
        </dt>
        <dd class="col-sm-10">
            @foreach (var member in Model.SelectedMembers)
            {
                <div>@member</div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Project?.ProjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
